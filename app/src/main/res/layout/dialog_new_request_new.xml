<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dialog_back_color">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_10sdp">

                <com.skyfishjy.library.RippleBackground
                    android:id="@+id/ripple"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_100sdp"
                    android:layout_marginBottom="@dimen/_80sdp"
                    android:shadowColor="@color/white"
                    app:rb_color="@color/white"
                    app:rb_duration="4000"
                    app:rb_radius="50dp"
                    app:rb_rippleAmount="4"
                    app:rb_scale="6">

                    <TextView
                        android:id="@+id/textViewTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/poppins_regular"
                        android:text="00.01"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_25sdp"
                        android:textStyle="bold" />

                </com.skyfishjy.library.RippleBackground>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btAccept"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@drawable/login_bt_back_yellow"
                android:fontFamily="@font/poppins_medium"
                android:padding="@dimen/_10sdp"
                android:text="@string/accept"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_16sdp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btReject"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@drawable/red_back_50"
                android:fontFamily="@font/poppins_medium"
                android:padding="@dimen/_10sdp"
                android:text="@string/reject"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_16sdp" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rlLocations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:background="@drawable/rounded_white_bg"
            android:elevation="@dimen/_5sdp"
            android:padding="@dimen/_10sdp">

            <ImageView
                android:id="@+id/ivfrom"
                android:layout_width="@dimen/_6sdp"
                android:layout_height="@dimen/_6sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/small_red_circle" />

            <TextView
                android:id="@+id/tvFrom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_toEndOf="@+id/ivfrom"
                android:backgroundTint="@color/white"
                android:hint="@string/select_pick_up_address"
                android:maxLines="3"
                android:textColor="@color/textColor"
                android:textSize="@dimen/_12sdp" />

            <View
                android:id="@+id/view1"
                android:layout_width="@dimen/_1sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_below="@+id/ivfrom"
                android:layout_marginVertical="@dimen/_2sdp"
                android:layout_marginStart="@dimen/_3sdp"
                android:background="@color/gray" />

            <ImageView
                android:id="@+id/ivto"
                android:layout_width="@dimen/_6sdp"
                android:layout_height="@dimen/_6sdp"
                android:layout_below="@+id/view1"
                android:background="@drawable/down_arrow" />

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_below="@+id/tvFrom"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_toEndOf="@id/view1"
                android:background="@color/light_gray" />

            <TextView
                android:id="@+id/tv_Destination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/view2"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_toEndOf="@id/ivto"
                android:backgroundTint="@color/white"
                android:ellipsize="end"
                android:hint="@string/sel_destination"
                android:inputType="none"
                android:maxLines="3"
                android:textColor="@color/textColor"
                android:textSize="@dimen/_12sdp" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/llLater"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/_5sdp"
                android:layout_below="@+id/tv_Destination"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/view2"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_toEndOf="@id/ivto"
                    android:fontFamily="@font/poppins_medium"
                    android:inputType="none"
                    android:includeFontPadding="false"
                    android:maxLines="3"
                    android:text="@string/schedule"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/laterDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/view2"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_toEndOf="@id/ivto"
                    android:fontFamily="@font/poppins_medium"
                    android:includeFontPadding="false"
                    android:inputType="none"
                    android:maxLines="3"
                    android:text=" 2021-10-12"
                    android:textColor="@color/purple_700"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/laterTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/view2"
                    android:includeFontPadding="false"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_toEndOf="@id/ivto"
                    android:fontFamily="@font/poppins_medium"
                    android:inputType="none"
                    android:maxLines="3"
                    android:textColor="@color/purple_700"
                    android:textSize="@dimen/_12sdp" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </RelativeLayout>

    </RelativeLayout>

</layout>